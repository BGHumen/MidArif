#include <iostream>
using namespace std;
int main() {
	float a, b, c, d, e;
	setlocale(LC_ALL, "rus");
	cout << "Поиск среднего арифметического у двух,трёх ,четырёх и пяти чисел !" << endl;
	int arf;
	cout << "Введите ниже количество чисел для поиска среднего арифметического!\n";
	cin >> arf;
	if (arf == 2) {
		cout << "Введите ниже числа ,у которых нужно найти среднее арифметическое" << endl;
		cout << "Пример : 2 3" << endl;
		cin >> a >> b;
		float sa = (a + b) / 2;
		cout << "Ответ:" << endl;
		cout << sa;
	}
	else if (arf == 3) {
		cout << "Введите ниже числа ,у которых нужно найти среднее арифметическое" << endl;
		cout << "Пример : 2 3 4" << endl;
		cin >> a >> b >> c;
		float sa = (a + b + c) / 3;
		cout << "Ответ:" << endl;
		cout << sa;
	}
	else if (arf == 4) {
		cout << "Введите ниже числа ,у которых нужно найти среднее арифметическое" << endl;
		cout << "Пример : 2 3 4 5" << endl;
		cin >> a >> b >> c >> d;
		float sa = (a + b + c + d) / 4;
		cout << "Ответ:" << endl;
		cout << sa;
	}
	else if (arf == 5) {
		cout << "Введите ниже числа ,у которых нужно найти среднее арифметическое" << endl;
		cout << "Пример : 2 3 4 5" << endl;
		cin >> a >> b >> c >> d >> e;
		float sa = (a + b + c + d + e) / 5;
		cout << "Ответ:" << endl;
		cout << sa;
	}
	else {
		cout << "Убедитесь , что вы ввели число от 1 до 5 в строке , где вас просили ввести количество чисел для поиска среднего арифметического " << endl;
	}
}
